---
import "../styles/global.css";
---
<main class="main w-full h-full">
    <section class="content md:flex md:max-w-[686px] md:h-[512px] lg:max-w-[736px] mx-auto bg-white md:rounded-4xl">
        <div class="summary h-[356px] rounded-b-4xl grid place-items-center md:h-auto md:grow md:rounded-t-4xl">
            <div class="summary__information w-[260px] h-[292px] md:h-auto text-center flex flex-col items-center gap-[24px] md:gap-[32px]">
                <h3 class="summary__title text-[18px] leading-[1.3] font-bold text-navy-200 md:text-2xl">Your Result</h3>
                <div class="summary__circle w-[140px] h-[140px] md:w-[200px] md:h-[200px] rounded-full grid place-content-center gap-2">
                    <h2 class="summary__number text-white leading-none font-extrabold text-[56px] md:text-[72px]">76</h2>
                    <p class="summary__range text-navy-200 leading-[1.3] font-bold md:text-[18px]">of 100</p>
                </div>
                <div class="summary__texts text-center text-white leading-[1.3] md:mx-auto md:w-[200px] lg:w-[260px]">
                    <h3 class="summary__great font-bold text-2xl mb-2 md:mb-4 md:text-[32px]">Great</h3>
                    <p class="summary__message font-medium text-navy-200 md:text-[18px]">You scored higher than 65% of the people who have taken these tests.</p>
                </div>
            </div>
        </div>
        <div class="summary__data p-6 md:p-10 flex flex-col gap-[24px] md:gap-[32px] md:grow">
            <h3 class="summary__subtitle font-bold text-[18px] md:text-[24px] leading-[1.3] text-navy-950">Summary</h3>
            <div class="summary__details grid gap-4 md:gap-4">
                <div class="summary__detail bg-red-50">
                    <img src="/images/icon-reaction.svg" alt="Reaction" class="summary__img">
                    <p class="summary__name text-red-400">Reaction</p>
                    <p class="summary__score"><span class="summary__bold">80</span><span class="summary__slash">/</span><span class="summary__max">100</span></p>
                </div>
                <div class="summary__detail bg-yellow-50">
                    <img src="/images/icon-memory.svg" alt="Memory" class="summary__img">
                    <p class="summary__name text-yellow-400">Memmory</p>
                    <p class="summary__score"><span class="summary__bold">92</span><span class="summary__slash">/</span><span class="summary__max">100</span></p>
                </div>
                <div class="summary__detail bg-green-50">
                    <img src="/images/icon-verbal.svg" alt="Verbal" class="summary__img">
                    <p class="summary__name text-green-500">Verbal</p>
                    <p class="summary__score"><span class="summary__bold">61</span><span class="summary__slash">/</span><span class="summary__max">100</span></p>
                </div>
                <div class="summary__detail bg-blue-50">
                    <img src="/images/icon-visual.svg" alt="Reaction" class="summary__img">
                    <p class="summary__name text-blue-800">Visual</p>
                    <p class="summary__score"><span class="summary__bold">73</span><span class="summary__slash">/</span><span class="summary__max">100</span></p>
                </div>
            </div>
            <button class="summary__btncontinue cursor-pointer p-4 text-white font-bold text-[18px] leading-[1.3] bg-navy-950 rounded-[128px]">Continue</button>
        </div>
    </section>
